<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindowUsers.xaml">
    <Application.Resources>
        <local:ConvertImagePathToBitmap x:Key="ImagePathToBitmap" />
        <local:cartVisibilityConverter x:Key="cartVisibilityConverter" />
        <local:clientVisibilityConverter x:Key="clientVisibilityConverter" />
        <local:managerVisibilityConverter x:Key="managerVisibilityConverter" />
        <local:addVisibilityConverter x:Key="addVisibilityConverter" />
        <local:updateVisibilityConverter x:Key="updateVisibilityConverter" />
        <local:followOrderConverter x:Key="followOrderConverter" />
        <local:IsReadOnlyConverter x:Key="IsReadOnlyConverter" />
        <local:statusOrderConverter x:Key="statusOrderConverter" />

        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#a4ccc6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#f9f6f0"/>
        </Style>
    </Application.Resources>
</Application>
